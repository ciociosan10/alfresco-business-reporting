	<summary>
		<band height="437" splitType="Stretch">
			<barChart>
				<chart isShowLegend="false">
					<reportElement x="0" y="0" width="572" height="429"/>
					<chartTitle>
						<titleExpression><![CDATA["Volume per Site (in MB)"]]></titleExpression>
					</chartTitle>
					<chartSubtitle/>
					<chartLegend/>
				</chart>
				<categoryDataset>
					<categorySeries>
						<seriesExpression><![CDATA["Dummy Series"]]></seriesExpression>
						<categoryExpression><![CDATA[$F{site}]]></categoryExpression>
						<valueExpression><![CDATA[$F{size}]]></valueExpression>
					</categorySeries>
				</categoryDataset>
				<barPlot isShowLabels="false">
